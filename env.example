# Database (dev)
DATABASE_URL="file:./dev.db"

# Admin auth for upload + create
ADMIN_TOKEN="change-me"

# Optional: S3/R2 for production image storage
S3_BUCKET="your-bucket"
S3_REGION="us-west-2"
S3_ACCESS_KEY_ID="AKIA..."
S3_SECRET_ACCESS_KEY="..."
# S3 endpoint (optional, will auto-generate from region if not set)
S3_ENDPOINT="https://s3.us-west-2.amazonaws.com"
# Public base for serving images (S3 URL or your CDN)
S3_PUBLIC_BASE_URL="https://your-bucket.s3.amazonaws.com"
